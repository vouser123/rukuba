{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schema/exercise_roles.schema.json",
  "title": "Exercise Roles Overlay",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "exercise_roles": {
      "type": "object",
      "patternProperties": {
        "^(ex\\d{4}|[0123456789ABCDEFGHJKMNPQRSTVWXYZ]{26})$": {
          "$ref": "#/definitions/role_array"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["schema_version", "exercise_roles"],
  "definitions": {
    "role_array": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/definitions/role" },
      "uniqueItems": true
    },
    "role": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "region": {
          "type": "string",
          "enum": ["core", "back", "hip", "knee", "ankle", "foot", "vestibular"]
        },
        "capacity": {
          "type": "string",
          "enum": ["strength", "control", "stability", "tolerance", "mobility"]
        },
        "focus": {
          "type": "string",
          "minLength": 1
        },
        "contribution": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        }
      },
      "required": ["region", "capacity", "contribution"]
    }
  }
}